@model IEnumerable<OnlineShop.Api.Models.Product>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Quản lý sản phẩm";
}

<div class="container mt-4">
    <h2>Quản lý sản phẩm</h2>

    <a asp-action="Create" class="btn btn-primary mb-3">+ Thêm sản phẩm</a>

    <table class="table table-bordered text-center align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Tên</th>
                <th>Giá</th>
                <th>Tồn kho</th>
                <th>Ảnh</th>
                <th>Danh mục</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Id</td>
                    <td>@p.Name</td>
                    <td>@string.Format("{0:N0} đ", p.Price)</td>
                    <td>@p.Stock</td>
                    <td>
                        @if (!string.IsNullOrEmpty(p.ImageUrl))
                        {
                            <img src="@p.ImageUrl" alt="@p.Name" width="80" height="80" style="object-fit:cover;border-radius:6px;" />
                        }
                        else
                        {
                            <span class="text-muted">Không có ảnh</span>
                        }
                    </td>
                    <td>@p.Category?.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-warning btn-sm">Sửa</a>
                        <form asp-action="Delete" asp-route-id="@p.Id" method="post" style="display:inline">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Xác nhận xóa sản phẩm này?')">Xóa</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
