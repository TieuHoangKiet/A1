@model IEnumerable<OnlineShop.Web.Models.AccountUser>

    @{
    ViewData["Title"] = "Quản lý tài khoản";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }

    <div class="container mt-4">
        <h3>@ViewData["Title"]</h3>
        @* Nếu không cho tạo thêm tài khoản thì giữ nguyên nút bị comment *@
        @* <a asp-action="Create" class="btn btn-primary mb-3">+ Thêm tài khoản</a> *@

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tên đăng nhập</th>
                    <th>Họ tên</th>
                    <th>Email</th>
                    <th>SĐT</th>
                   
                    <th>Ngày tạo</th>
                    <th>Thao tác</th>
                </tr>
            </thead>

            <tbody>
                @if (Model != null)
        {
            foreach (var a in Model)
            {
                <tr>
                    <td>@a.UserId</td>
                    <td>@a.UserName</td>
                    <td>@a.FullName</td>
                    <td>@a.Email</td>
                    <td>@a.Phone</td>
                   
                    <td>@a.CreatedAt?.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@a.UserId" class="btn btn-sm btn-warning">Sửa</a>
                        <form asp-action="Delete" asp-route-id="@a.UserId" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger"
                                    onclick="return confirm('Xóa tài khoản này?')">
                                Xóa
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
            </tbody>
        </table>
    </div>
