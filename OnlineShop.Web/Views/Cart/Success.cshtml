@model OnlineShop.Web.Models.Order

<h2 class="text-success mb-3">Đặt hàng thành công!</h2>

@if (Model == null)
{
    <div class="alert alert-warning">
        Không tìm thấy thông tin đơn hàng. Vui lòng quay lại giỏ hàng.
    </div>
}
else
{
    <p><strong>Khách hàng:</strong> @Model.ShipName</p>
    <p><strong>Số điện thoại:</strong> @Model.ShipPhone</p>
    <p><strong>Địa chỉ:</strong> @Model.ShipAddress</p>
    <p><strong>Ngày đặt:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>

    <h4 class="mt-4">Chi tiết đơn hàng</h4>
    <table class="table table-bordered text-center">
        <thead class="table-light">
            <tr>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Tổng</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.OrderItems != null && Model.OrderItems.Any())
            {
                foreach (var item in Model.OrderItems)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.Price.ToString("N0") đ</td>
                        <td>@item.Quantity</td>
                        <td>@(item.Price * item.Quantity).ToString("N0") đ</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4">Không có sản phẩm nào trong đơn hàng.</td>
                </tr>
            }
        </tbody>
    </table>

    <p class="text-end fw-bold">
        Tổng cộng: <span class="text-danger">@Model.Total.ToString("N0") đ</span>
    </p>
}

<div class="mt-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Về trang chủ</a>
</div>
