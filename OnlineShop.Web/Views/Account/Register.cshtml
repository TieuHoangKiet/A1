@model OnlineShop.Web.Models.RegisterModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Đăng ký";
}

<div class="container mt-5" style="max-width: 450px;">
    <h3 class="text-center mb-4">Đăng ký tài khoản</h3>

    <form asp-action="Register" method="post">

        <div class="form-group mb-3">
            <label>Tên đăng nhập</label>
            <input asp-for="UserName" class="form-control" required />
        </div>

        <div class="form-group mb-3">
            <label>Mật khẩu</label>
            <input asp-for="PasswordHash" type="password" class="form-control" required />
        </div>

        <div class="form-group mb-3">
            <label>Xác nhận mật khẩu</label>
            <input asp-for="ConfirmPassword" type="password" class="form-control" required />
        </div>

        <div class="form-group mb-3">
            <label>Email</label>
            <input asp-for="Email" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label>Họ tên</label>
            <input asp-for="FullName" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label>Số điện thoại</label>
            <input asp-for="Phone" class="form-control" />
        </div>

        @if (ViewBag.Error != null)
        {
        <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <button type="submit" class="btn btn-primary w-100">Đăng ký</button>
    </form>

    <div class="text-center mt-3">
        <a href="/Account/Login">Đã có tài khoản? Đăng nhập</a>
    </div>
</div>
